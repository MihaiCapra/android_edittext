<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TextField" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_500</item>
        <item name="colorPrimaryVariant">@color/black_700</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <item name="colorAccent">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_500</item>
        <item name="colorOnSecondary">@color/black_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/yellow_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.TextField</item>
    </style>

    <!-- Default Text Field -->
    <style name="Theme.DefaultTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/black_500</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="colorControlNormal">@color/black_500</item>
        <item name="colorControlActivated">@color/black_500</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_4</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_4</item>
        <item name="android:paddingBottom">@dimen/padding_32</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_4</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_4</item>
        <item name="backgroundColor">@color/black_200</item>
    </style>
</resources>